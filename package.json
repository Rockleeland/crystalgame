{
	"name": "loveletter",
	"version": "1.0.0",
	"description": "game",
	"main": "server.js",
	"engines": {
		"node": "8.11.1"
	},
	"scripts": {
		"start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
		"start:prod": "node server.js",
		"start:dev": "concurrently \"nodemon --ignore 'game/*'\" \"npm run game\"",
		"game": "cd game && npm run start",
		"install": "cd game && npm install",
		"build": "cd game && npm run build",
		"heroku-postbuild": "cd game && npm install --only=dev && npm install && npm run build"
	},
	"author": "Adam Funk",
	"license": "ISC",
	"devDependencies": {
		"concurrently": "^4.1.1",
		"nodemon": "^1.18.3"
	},
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "^5.10.1",
		"bcrypt-nodejs": "^0.0.3",
		"chance": "^1.0.18",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-jwt": "^5.3.1",
		"if-env": "^1.0.4",
		"jsonwebtoken": "^8.4.0",
		"mongoose": "^5.4.6",
		"morgan": "^1.9.1",
		"redux-thunk": "^2.3.0",
		"socket.io": "^2.2.0",
		"socket.io-client": "^2.2.0",
		"thunk": "0.0.1"
	}
}
